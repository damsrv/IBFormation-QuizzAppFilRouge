@page
@model LoginModel
@{
    ViewBag.BodyClass = "bg-login";
}


<div class="d-flex align-items-center text-center">
@**@<h1>@ViewData["Title"]</h1>
<div class="row">
        <div class="card border-0 rounded-lg shadow-lg p-4 m-4 align-items-center justify-content-center">
        
        <section>
            <form id="Compte" method="post">
                <h2>Utilisez votre compte pour vous connecter.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Saisissez votre e-mail</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Saisissez votre mot de passe</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Se connecter</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublié</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">S'inscrire en tant que nouvel utilisateur</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Renvoyer la confirmation par e-mail</a>
                    </p>
                </div>
            </form>
        </section>
        </div> 
    </div>
 </div>  
    


      
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


