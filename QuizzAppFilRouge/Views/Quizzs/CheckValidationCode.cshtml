@using QuizzAppFilRouge.Data.Entities;
@using QuizzAppFilRouge.Models.QuizzViewModels;
@model QuizzViewModel?;


@*<h1>Bonjour vous vous apprêter à passer le Quizz numéro : @Model.Id</h1>*@

<h2> Veuillez entrer le code de validation que vous avez recu par mail pour valider le commencement du Quizz </h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckValidationCode">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EnteredValidationCode" class="control-label"> Validation Code : </label>
                <input type="text" name="enteredValidationCode" />
                <span asp-validation-for="EnteredValidationCode" class="text-danger"></span>
            </div>


                @Html.Hidden("Id", Model.Id)
                @Html.Hidden("ValidationCode", Model.ValidationCode)
      


            <input type="submit" value="Valider" class="btn btn-primary" />

        </form>
        <h2>@TempData["AlertMessage"]</h2>
        <h2>@TempData["SucessMessage"]</h2>

    </div>

</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
