@using QuizzAppFilRouge.Data.Entities;
@model QuizzAppFilRouge.Models.QuizzViewModel.QuizzViewModel

@{
    ViewData["Title"] = "Créer un Quizz";
}

<h4>Généaration de Nouveau Quizz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreQuestions" class="control-label"></label>
                    <select asp-for="NombreQuestions" class="form-select" >
                        <option value="10">10</option>
                        <option value="20">20</option>
                    </select>
                <span asp-validation-for="NombreQuestions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NombreQuestionLibres" class="control-label"></label>
                    <select asp-for="NombreQuestionLibres" class="form-select" >
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>

                    </select>
                <span asp-validation-for="NombreQuestions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuestionLevel" class="control-label">Niveau du Questionnaire</label>
                    <select asp-for="QuestionLevel" class="form-select" >
                    @foreach (QuestionLevelEnum level in QuestionLevelEnum.GetValues(typeof(QuestionLevelEnum)))
                    {
                            <option value="@level">@level</option>
                        }
                    </select>
                <span asp-validation-for="QuestionLevel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
