@using QuizzAppFilRouge.Models.QuizzViewModels


@model IEnumerable<QuizzViewModel>

@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuizzLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuizzCreator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuizzLangage)
            </th>
            <th>
                Candidat
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValidationCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var quizz in Model) {
        <tr>
            <td>
                @quizz.Id
            </td>
            <td>
                @quizz.Notation
            </td>
            <td>
                @quizz.QuizzLevel
            </td>
            <td>
                @quizz.QuizzCreator
            </td>
            <td>
                @quizz.QuizzLangage
            </td>
            <td>
                @quizz.Passages.ApplicationUser.FirstName
                @quizz.Passages.ApplicationUser.LastName

            </td>
            <td>
                @quizz.ValidationCode
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@quizz.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@quizz.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@quizz.Id">Delete</a>
                <a asp-controller = "Email" asp-action="Index" 
                    asp-route-validationCode="@quizz.ValidationCode" 
                    asp-route-firstName="@quizz.Passages.ApplicationUser.FirstName" 
                    asp-route-lastName="@quizz.Passages.ApplicationUser.LastName"
                    asp-route-quizzId="@quizz.Passages.QuizzId"
                    asp-route-applicantId="@quizz.Passages.ApplicationUserId"
                    asp-route-applicantId="@quizz.Passages.ApplicationUserId"
                    asp-route-date ="@quizz.Passages.PassageDate"
                > 
                Envoyer Code de validation
                </a> |
                <a asp-action="GetQuizzResults" asp-route-quizzId="@quizz.Id">Extraire formulaire de résultats</a> |

                <a asp-action="GetFreeQuestionResponse" asp-route-quizzId="@quizz.Id">Extraire questions libres pour correction</a> |

                <a asp-controller="Responses" asp-action="CorrectFreeQuestionsResponses" asp-route-quizzId="@quizz.Id">Ajouter correction pour les questions libres</a> |
            </td>
        </tr>
}
    </tbody>
</table>
