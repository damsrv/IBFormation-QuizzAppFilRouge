@using QuizzAppFilRouge.Models.QuizzViewModel


@model IEnumerable<QuizzViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValidationCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuizzLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuizzCreator)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Notation
            </td>
            <td>
                @item.ValidationCode
            </td>
            <td>
                @item.QuizzLevel
            </td>
            <td>
                @item.QuizzCreator
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
