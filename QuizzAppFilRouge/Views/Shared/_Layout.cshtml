@using QuizzAppFilRouge.Data

@functions {
    public string GetBodyClass()
    {
        if (@ViewBag.BodyClass != null)
        {

            if (ViewBag.BodyClass.Contains("accueil"))
            {
                return "vh-100";
            }
        }
        return "";

    }
}

<!DOCTYPE html>
<html class="vh-100" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizzAppFilRouge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuizzAppFilRouge.styles.css" asp-append-version="true" />
</head>
<body class="@ViewBag.BodyClass">
    <header>
    </header>
    <div class="d-flex gap-4 ">
        <div class="col-2 d-flex flex-column p-3 shadow bg-light vh-100  @GetBodyClass()">
            <ul class="list-unstyled">


                <li>

                    <a class="d-flex text-center p-3" href="https://localhost:7256/"><img height="32" width="32" src="/assets/images/home.png" /></a>
                    <a class="d-flex text-center p-3 " href="https://localhost:7256/">Accueil</a>
                </li>

            </ul>

        </div>







        <div class="quizz-login">
            @RenderBody()
        </div>



        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
